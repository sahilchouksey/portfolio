# Enhanced Caddyfile with SEO optimizations

# Portfolio - Main domain
sahilchouksey.in, www.sahilchouksey.in {
    root * /var/www/portfolio
    
    # Performance optimizations
    encode gzip brotli
    
    # Security & SEO headers
    header {
        # Security headers
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        Permissions-Policy "geolocation=(), microphone=(), camera=()"
        
        # SEO headers
        X-Robots-Tag "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
        
        # Performance headers for static assets
        Cache-Control "public, max-age=31536000, immutable" {
            path *.css
            path *.js
            path *.png
            path *.jpg
            path *.jpeg
            path *.gif
            path *.webp
            path *.svg
            path *.pdf
            path *.ico
            path *.woff
            path *.woff2
        }
        
        # HTML cache for shorter time
        Cache-Control "public, max-age=300, s-maxage=3600" {
            path *.html
            path /
        }
        
        # Special handling for sitemap and robots
        Cache-Control "public, max-age=3600" {
            path /sitemap.xml
            path /robots.txt
            path /manifest.json
        }
    }
    
    # SEO-friendly redirects
    redir /home / 301
    redir /portfolio / 301
    
    # Serve sitemap and robots.txt
    handle /sitemap.xml {
        header Content-Type "application/xml; charset=utf-8"
        file_server
    }
    
    handle /robots.txt {
        header Content-Type "text/plain; charset=utf-8"
        file_server
    }
    
    handle /manifest.json {
        header Content-Type "application/manifest+json; charset=utf-8"
        file_server
    }
    
    # File server for static files
    file_server
    
    # TLS configuration
    tls /etc/caddy/certs/cloudflare-sahilchouksey.in/cert.pem /etc/caddy/certs/cloudflare-sahilchouksey.in/key.pem
    
    # Enhanced logging for SEO monitoring
    log {
        output file /var/log/caddy/portfolio.log {
            roll_size 10MB
            roll_keep 5
            roll_keep_for 168h
        }
        format single_field common_log
        level INFO
    }
}

# Backend - Keep existing configuration
backend-soundrex.sahilchouksey.in {
    encode gzip brotli
    reverse_proxy localhost:5050
    
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
    }
    
    tls /etc/caddy/certs/cloudflare-sahilchouksey.in/cert.pem /etc/caddy/certs/cloudflare-sahilchouksey.in/key.pem
    
    log {
        output file /var/log/caddy/backend.log
        format single_field common_log
    }
}

# Force HTTPS redirects
http://sahilchouksey.in, http://www.sahilchouksey.in {
    redir https://{host}{uri} 301
}

http://backend-soundrex.sahilchouksey.in {
    redir https://{host}{uri} 301
}